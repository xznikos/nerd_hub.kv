#:import dp kivy.metrics.dp

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)

        # HEADER VERDE (somente título)
        BoxLayout:
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(8)
            canvas.before:
                Color:
                    rgba: 0.07, 0.57, 0.38, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Login"
                color: 1, 1, 1, 1
                font_size: '18sp'
                bold: True
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        # CORPO DO LOGIN
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(12)

            Label:
                text: "Bem-vindo!"
                font_size: dp(22)
                bold: True
                color: 0.07, 0.57, 0.38, 1
                size_hint_y: None
                height: dp(40)
                halign: 'center'
                valign: 'middle'
                text_size: self.size

            TextInput:
                hint_text: "Usuário ou E-mail"
                font_size: dp(16)
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                size_hint_y: None
                height: dp(50)
                padding: [dp(10), dp(10)]

            TextInput:
                hint_text: "Senha"
                password: True
                font_size: dp(16)
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                size_hint_y: None
                height: dp(50)
                padding: [dp(10), dp(10)]

            Button:
                text: "Entrar"
                size_hint_y: None
                height: dp(45)
                background_normal: ''
                background_color: 0.07, 0.57, 0.38, 1
                color: 1, 1, 1, 1
                font_size: dp(16)
                bold: True
                on_release:
                    app.root.transition.direction = "left"
                    app.root.current = "home"

            # ---- Botão VOLTAR colocado abaixo do Entrar (como você pediu) ----
            Button:
                text: "Voltar"
                size_hint_y: None
                height: dp(42)
                background_normal: ''
                background_color: 0.78, 0.78, 0.78, 1
                color: 0, 0, 0, 1
                on_release:
                    app.root.transition.direction = "right"
                    app.root.current = "home"

            Label:
                text: "Esqueceu sua senha?"
                color: 0.07, 0.57, 0.38, 1
                font_size: dp(14)
                size_hint_y: None
                height: dp(30)
                halign: 'center'
                valign: 'middle'
                text_size: self.size
